            point="org.eclipse.ui.propertyPages">
        <page
              class="nl.esi.poosl.xtext.ui.PooslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
              id="nl.esi.poosl.xtext.Poosl"
              name="POOSL">
            <keywordReference id="nl.esi.poosl.xtext.ui.keyword_Poosl"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
